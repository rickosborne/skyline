{
	"$id": "https://rickosborne.github.io/skyline/data/schema/machine.schema.json",
	"$schema": "http://json-schema.org/draft-07/schema",
	"additionalProperties": false,
	"definitions": {
		"action": {
			"additionalProperties": false,
			"description": "Action the machine may take",
			"properties": {
				"attack": {
					"default": false,
					"description": "It the action an attack which may be used in combat?",
					"title": "Is attack?",
					"type": "boolean"
				},
				"description": {
					"description": "Human-readable description of the action, without any adapter-specific language",
					"oneOf": [
						{
							"type": "string"
						},
						{
							"items": {
								"type": "string"
							},
							"type": "array"
						}
					],
					"title": "Description"
				},
				"effect": {
					"default": false,
					"description": "Is the action an effect which might combine with other actions?",
					"title": "Is effect?",
					"type": "boolean"
				},
				"id": {
					"$ref": "#/definitions/id"
				},
				"title": {
					"description": "Human-readable name for the action",
					"title": "Title",
					"type": "string"
				}
			},
			"required": [
				"title",
				"id"
			],
			"title": "Action",
			"type": "object"
		},
		"adapter": {
			"additionalProperties": false,
			"description": "Adapter-specific data",
			"properties": {
				"cypher": {
					"$ref": "#/definitions/cypherAdapter"
				},
				"dnd5e": {
					"$ref": "#/definitions/dnd5eAdapter"
				}
			},
			"required": [
				"cypher",
				"dnd5e"
			],
			"title": "Adapter Data",
			"type": "object"
		},
		"basedOn": {
			"additionalProperties": false,
			"properties": {
				"href": {
					"format": "URL",
					"title": "URL",
					"type": "string"
				},
				"title": {
					"title": "Title",
					"type": "string"
				}
			},
			"title": "Based On",
			"type": "object"
		},
		"component": {
			"additionalProperties": false,
			"description": "Component",
			"properties": {
				"damage": {
					"$ref": "#/definitions/elementDecimal"
				},
				"damagePercent": {
					"description": "% of overall machine health this component can take in damage before the component is destroyed",
					"maximum": 100,
					"minimum": 0,
					"title": "Health %",
					"type": "integer"
				},
				"explode": {
					"additionalProperties": false,
					"properties": {
						"element": {
							"$ref": "#/definitions/elementKey"
						},
						"rangeFeet": {
							"title": "Range (ft.)",
							"type": "integer"
						}
					},
					"required": [
						"element",
						"rangeFeet"
					],
					"title": "Explosion",
					"type": "object"
				},
				"loot": {
					"$ref": "#/definitions/loot"
				},
				"remove": {
					"default": "false",
					"description": "Whether the component can be torn free",
					"title": "Removable?",
					"type": "boolean"
				},
				"targetDifficulty": {
					"default": "Normal",
					"description": "Relative difficulty to hit",
					"enum": [
						"Easy",
						"Normal",
						"Moderate",
						"Tricky",
						"Hard",
						"Epic"
					],
					"title": "Difficulty to Target",
					"type": "string"
				},
				"targetNotes": {
					"description": "Targeting notes",
					"oneOf": [
						{
							"type": "string"
						},
						{
							"items": {
								"type": "string"
							},
							"type": "array"
						}
					]
				},
				"title": {
					"description": "Human-readable name of the component",
					"title": "Title",
					"type": "string"
				}
			},
			"required": [
				"title",
				"remove",
				"damagePercent"
			],
			"title": "Component",
			"type": "object"
		},
		"cypherAdapter": {
			"additionalProperties": false,
			"description": "Cypher specifics",
			"properties": {
				"armor": {
					"title": "Armor",
					"type": "number"
				},
				"basedOn": {
					"$ref": "#/definitions/basedOn"
				},
				"combatNotes": {
					"allOf": [
						{
							"title": "Combat Notes"
						},
						{
							"$ref": "skyline.schema.json#/definitions/oneOrMoreStrings"
						}
					]
				},
				"damage": {
					"title": "Damage Inflicted",
					"type": "number"
				},
				"health": {
					"title": "Health",
					"type": "number"
				},
				"interaction": {
					"allOf": [
						{
							"title": "Interaction"
						},
						{
							"$ref": "skyline.schema.json#/definitions/oneOrMoreStrings"
						}
					]
				},
				"intrusion": {
					"allOf": [
						{
							"title": "GM Intrusion"
						},
						{
							"$ref": "skyline.schema.json#/definitions/oneOrMoreStrings"
						}
					]
				},
				"level": {
					"title": "Level",
					"type": "number"
				},
				"lootNotes": {
					"allOf": [
						{
							"title": "Loot Notes"
						},
						{
							"$ref": "skyline.schema.json#/definitions/oneOrMoreStrings"
						}
					]
				},
				"modifications": {
					"allOf": [
						{
							"title": "Modifications"
						},
						{
							"$ref": "skyline.schema.json#/definitions/oneOrMoreStrings"
						}
					]
				},
				"motive": {
					"allOf": [
						{
							"title": "Motives"
						},
						{
							"$ref": "skyline.schema.json#/definitions/oneOrMoreStrings"
						}
					]
				},
				"movement": {
					"enum": [
						"Long",
						"Short"
					],
					"title": "Movement",
					"type": "string"
				},
				"movementNotes": {
					"allOf": [
						{
							"title": "Movement Notes"
						},
						{
							"$ref": "skyline.schema.json#/definitions/oneOrMoreStrings"
						}
					]
				},
				"target": {
					"title": "Target Number",
					"type": "number"
				},
				"use": {
					"allOf": [
						{
							"title": "Use"
						},
						{
							"$ref": "skyline.schema.json#/definitions/oneOrMoreStrings"
						}
					]
				}
			},
			"required": [
				"armor",
				"damage",
				"health",
				"level",
				"movement"
			],
			"title": "Cypher",
			"type": "object"
		},
		"dnd5eAdapter": {
			"additionalProperties": false,
			"description": "D&D 5E specifics",
			"properties": {
				"action": {
					"description": "Action specifics for D&D 5E",
					"patternProperties": {
						"^[a-z]+([A-Z][a-z]+)*$": {
							"additionalProperties": false,
							"properties": {
								"description": {
									"description": "Human-readable description of the action",
									"oneOf": [
										{
											"type": "string"
										},
										{
											"items": {
												"type": "string"
											},
											"type": "array"
										}
									]
								},
								"melee": {
									"default": false,
									"title": "Is a melee weapon attack?",
									"type": "boolean"
								},
								"minRangeFeet": {
									"title": "Min. Range ft.",
									"type": "integer"
								},
								"onHit": {
									"description": "On-hit effects",
									"items": {
										"$ref": "#/definitions/onHit"
									},
									"title": "Hit",
									"type": "array"
								},
								"ranged": {
									"default": false,
									"title": "Is a ranged weapon attack?",
									"type": "boolean"
								},
								"reachFeet": {
									"title": "Reach (ft.)",
									"type": "integer"
								},
								"save": {
									"additionalProperties": false,
									"properties": {
										"attribute": {
											"enum": [
												"Strength",
												"Dexterity",
												"Constitution",
												"Intelligence",
												"Wisdom",
												"Charisma"
											],
											"type": "string"
										},
										"difficulty": {
											"title": "DC",
											"type": "integer"
										},
										"half": {
											"title": "Half on success?",
											"type": "boolean"
										}
									},
									"required": [
										"difficulty",
										"attribute"
									],
									"title": "Save",
									"type": "object"
								},
								"target": {
									"oneOf": [
										{
											"type": "integer"
										},
										{
											"const": "all",
											"type": "string"
										}
									]
								},
								"toHit": {
									"title": "To-Hit Modifier",
									"type": "string"
								}
							},
							"title": "Action",
							"type": "object"
						}
					},
					"type": "object"
				},
				"armor": {
					"$ref": "dnd5e.schema.json#/definitions/armor"
				},
				"attr": {
					"$ref": "dnd5e.schema.json#/definitions/attr"
				},
				"basedOn": {
					"$ref": "#/definitions/basedOn"
				},
				"challenge": {
					"$ref": "dnd5e.schema.json#/definitions/challenge"
				},
				"flyFeet": {
					"$ref": "dnd5e.schema.json#/definitions/flyFeet"
				},
				"hitDie": {
					"$ref": "dnd5e.schema.json#/definitions/hitDie"
				},
				"hp": {
					"additionalProperties": false,
					"properties": {
						"average": {
							"title": "Average HP",
							"type": "integer"
						},
						"roll": {
							"title": "Roll",
							"type": "string"
						}
					},
					"required": [
						"average"
					],
					"title": "HP",
					"type": "object"
				},
				"passive": {
					"$ref": "dnd5e.schema.json#/definitions/passive"
				},
				"skill": {
					"additionalProperties": false,
					"patternProperties": {
						".*": {
							"pattern": "^[-+][0-9]+$",
							"title": "Modifier",
							"type": "string"
						}
					},
					"propertyNames": {
						"enum": [
							"Perception"
						],
						"type": "string"
					},
					"title": "Skill modifiers",
					"type": "object"
				},
				"speedFeet": {
					"$ref": "dnd5e.schema.json#/definitions/speedFeet"
				},
				"swimFeet": {
					"$ref": "dnd5e.schema.json#/definitions/swimFeet"
				}
			},
			"required": [
				"armor",
				"attr",
				"challenge",
				"hitDie",
				"hp",
				"speedFeet"
			],
			"title": "D&D 5E",
			"type": "object"
		},
		"elementBoolean": {
			"description": "Element",
			"patternProperties": {
				".*": {
					"default": false,
					"type": "boolean"
				}
			},
			"propertyNames": {
				"$ref": "#/definitions/elementKey"
			},
			"title": "Element",
			"type": "object"
		},
		"elementDecimal": {
			"description": "Element",
			"patternProperties": {
				".*": {
					"description": "Multiplier for this damage type",
					"type": "number"
				}
			},
			"propertyNames": {
				"oneOf": [
					{
						"$ref": "#/definitions/elementKey"
					},
					{
						"const": "all",
						"type": "string"
					}
				]
			},
			"title": "Element",
			"type": "object"
		},
		"elementKey": {
			"enum": [
				"corruption",
				"explosion",
				"fire",
				"freeze",
				"shock"
			],
			"title": "Element",
			"type": "string"
		},
		"id": {
			"$ref": "skyline.schema.json#/definitions/id"
		},
		"loot": {
			"description": "Items present for potential removal",
			"items": {
				"additionalProperties": false,
				"description": "Loot item",
				"properties": {
					"id": {
						"$ref": "#/definitions/id"
					},
					"percent": {
						"description": "Probability of undamaged recovery, in %",
						"maximum": 100,
						"minimum": 1,
						"title": "Recovery %",
						"type": "integer"
					},
					"quantity": {
						"oneOf": [
							{
								"minimum": 1,
								"title": "Exact Quantity",
								"type": "integer"
							},
							{
								"additionalProperties": false,
								"properties": {
									"max": {
										"title": "Maximum quantity",
										"type": "integer"
									},
									"min": {
										"default": 0,
										"title": "Minimum quantity",
										"type": "integer"
									}
								},
								"title": "Random Quantity",
								"type": "object"
							}
						]
					},
					"sell": {
						"description": "Shards obtained by selling to a vendor",
						"minimum": 0,
						"title": "Resale Value",
						"type": "integer"
					},
					"title": {
						"description": "Human-readable title",
						"title": "Title",
						"type": "string"
					}
				},
				"required": [
					"id"
				],
				"title": "Item",
				"type": "object"
			},
			"title": "Loot",
			"type": "array"
		},
		"onHit": {
			"additionalProperties": false,
			"description": "Damage upon hit",
			"properties": {
				"average": {
					"title": "Average damage",
					"type": "integer"
				},
				"roll": {
					"title": "Damage formula",
					"type": "string"
				},
				"type": {
					"enum": [
						"bludgeoning",
						"cold",
						"corruption",
						"fire",
						"force",
						"lightning",
						"piercing",
						"slashing"
					],
					"title": "Type",
					"type": "string"
				}
			},
			"title": "Hit",
			"type": "object"
		}
	},
	"description": "Machine (NPC)",
	"properties": {
		"$schema": {
			"type": "string"
		},
		"action": {
			"description": "Actions the machine may take",
			"items": {
				"$ref": "#/definitions/action"
			},
			"title": "Actions",
			"type": "array"
		},
		"adapter": {
			"$ref": "#/definitions/adapter"
		},
		"component": {
			"description": "Targetable parts of the machine",
			"patternProperties": {
				".*": {
					"$ref": "#/definitions/component"
				}
			},
			"required": [
				"body"
			],
			"title": "Components",
			"type": "object"
		},
		"id": {
			"$ref": "#/definitions/id"
		},
		"lang": {
			"default": "en-US",
			"description": "ISO 639-1 language code for human-readable text in this object",
			"title": "Language Code",
			"type": "string"
		},
		"link": {
			"description": "Links to external resources",
			"patternProperties": {
				"^[a-z0-9]+$": {
					"description": "URL",
					"format": "URL",
					"title": "URL",
					"type": "string"
				}
			},
			"propertyNames": {
				"enum": [
					"horizonWiki"
				],
				"type": "string"
			},
			"title": "Links",
			"type": "object"
		},
		"overrideSource": {
			"enum": [
				"unknown",
				"none",
				"EPSILON",
				"PSI",
				"RHO",
				"SIGMA",
				"XI",
				"ZETA"
			],
			"title": "Override Source",
			"type": "string"
		},
		"plural": {
			"description": "Display name for multiple items",
			"title": "Plural",
			"type": "string"
		},
		"role": {
			"enum": [
				"Acquisition",
				"Chariot",
				"Combat",
				"Reconnaissance",
				"Transport"
			],
			"title": "Role/Class",
			"type": "string"
		},
		"size": {
			"enum": [
				"Large",
				"Medium",
				"Small"
			],
			"title": "Size Class",
			"type": "string"
		},
		"strong": {
			"$ref": "#/definitions/elementBoolean"
		},
		"title": {
			"description": "Display name appropriate for human readers",
			"title": "Title",
			"type": "string"
		},
		"variant": {
			"description": "Known variant forms",
			"patternProperties": {
				".*": {
					"additionalProperties": false,
					"description": "Machine Variant",
					"properties": {
						"challengeLevel": {
							"title": "Challenge Level",
							"type": "integer"
						},
						"hp": {
							"description": "Hit Points",
							"title": "Hit Points",
							"type": "integer"
						}
					},
					"required": [
						"challengeLevel",
						"hp"
					],
					"type": "object"
				}
			},
			"propertyNames": {
				"enum": [
					"base",
					"corrupted",
					"daemonic"
				],
				"type": "string"
			},
			"required": [
				"base"
			],
			"title": "Variants",
			"type": "object"
		},
		"weak": {
			"$ref": "#/definitions/elementBoolean"
		}
	},
	"required": [
		"action",
		"adapter",
		"id",
		"overrideSource",
		"plural",
		"role",
		"size",
		"title",
		"variant"
	],
	"type": "object"
}
