									"roll": {
										"$ref": "skyline.schema.json#/definitions/roll"
									},
									"type": {
										"$ref": "dnd5e.schema.json#/definitions/damageType"
									}
								},
								"type": "object"
							},
							"hands": {
								"description": "Hands",
								"maximum": 2,
								"minimum": 1,
								"type": "integer"
							},
							"melee": {
								"default": false,
								"description": "Melee?",
								"type": "boolean"
							},
							"note": {
								"allOf": [
									{
										"description": "Notes"
									},
									{
										"$ref": "skyline.schema.json#/definitions/oneOrMoreStrings"
									}
								]
							},
							"rangeFeet": {
								"description": "Range (feet)",
								"minimum": 0,
								"type": "integer"
							},
							"ranged": {
								"default": false,
								"description": "Ranged?",
								"type": "boolean"
							},
							"reachFeet": {
								"description": "Reach (feet)",
								"minimum": 0,
								"type": "integer"
							},
							"spell": {
								"default": false,
								"description": "Spell?",
