					"$ref": "#/definitions/dnd5eAdapter"
				}
			},
			"required": [
				"dnd5e"
			],
			"title": "Adapter Data",
			"type": "object"
		},
		"dnd5eAdapter": {
			"additionalProperties": false,
			"description": "D&D 5E specifics",
			"properties": {
				"playerCharacter": {
					"description": "Player Characters",
					"items": {
						"$ref": "#/definitions/dnd5ePlayerCharacter"
					},
					"type": "array"
				}
			},
			"required": [
				"playerCharacter"
			],
			"type": "object"
		},
		"dnd5ePlayerCharacter": {
			"additionalProperties": false,
			"description": "Player Character",
			"properties": {
				"action": {
					"description": "Other Actions",
					"items": {
						"additionalProperties": false,
						"description": "Other Action",
						"properties": {
							"note": {
								"allOf": [
									{
										"description": "Notes"
									},
									{
										"$ref": "skyline.schema.json#/definitions/oneOrMoreStrings"
									}
								]
							},
							"title": {
								"description": "Title",
								"type": "string"
							}
						},
						"type": "object"
					},
					"type": "array"
				},
				"armor": {
					"$ref": "dnd5e.schema.json#/definitions/armor"
				},
				"attack": {
					"description": "Attacks",
					"items": {
						"additionalProperties": false,
						"description": "Attack",
						"properties": {
							"area": {
								"additionalProperties": false,
								"description": "Area",
								"properties": {
									"count": {
										"default": 1,
										"description": "Count of areas",
										"minimum": 1,
										"type": "integer"
									},
									"radiusFeet": {
										"description": "Radius (feet)",
										"minimum": 0,
										"type": "integer"
									},
									"shape": {
										"description": "Shape",
										"enum": [
											"CUBE",
											"SPHERE"
										],
										"type": "string"
									},
									"sideFeet": {
										"description": "Length Each Side (feed)",
										"minimum": 0,
										"type": "integer"
									}
								},
								"type": "object"
