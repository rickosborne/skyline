	"description": "Book",
	"properties": {
		"$id": {
			"format": "URL",
			"type": "string"
		},
		"$schema": {
			"type": "string"
		},
		"adapter": {
			"$ref": "#/definitions/adapter"
		},
		"title": {
			"description": "Title",
			"type": "string"
		}
