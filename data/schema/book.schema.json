				"proficiencyBonus": {
					"allOf": [
						{
							"description": "Proficiency Bonus"
						},
						{
							"$ref": "dnd5e.schema.json#/definitions/bonus"
						}
					]
				},
				"race": {
					"$ref": "dnd5e.schema.json#/definitions/race"
				},
				"skill": {
					"description": "Skills",
					"items": {
						"additionalProperties": false,
						"description": "Skill",
						"properties": {
							"bonus": {
								"$ref": "dnd5e.schema.json#/definitions/bonus"
							},
							"proficient": {
								"default": false,
								"description": "Proficient?",
								"type": "boolean"
							},
							"stat": {
								"allOf": [
									{
										"description": "Base Stat"
									},
									{
										"$ref": "dnd5e.schema.json#/definitions/statAbbr"
									}
								]
							},
							"title": {
								"description": "Skill Name",
								"type": "string"
							}
						},
						"required": [
							"title"
						],
						"type": "object"
					},
					"type": "array"
				},
				"speedFeet": {
					"$ref": "dnd5e.schema.json#/definitions/speedFeet"
				}
			},
			"required": [
				"armor",
				"attr",
				"class",
				"hitDie",
				"initiativeBonus",
				"level",
				"name",
				"passive",
				"proficiencyBonus",
				"race",
				"speedFeet"
